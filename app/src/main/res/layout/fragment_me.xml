<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.administrator.pets.Fragment.MeFragment">
    <RelativeLayout
        android:id="@+id/line1"
        android:background="#f5f5f5"
        android:theme="@style/myTransparent"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="我的"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/me_toolbar_tv"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/tabhost_item_color_normal"
            android:textSize="15dp"
            android:text="注册"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/line2"
        android:background="@mipmap/wode"
        android:layout_below="@+id/line1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/user_logo"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/login_text1"
            android:text="登录"
            android:textSize="15dp"
            android:background="#ff8000"
            android:textColor="@color/tabhost_item_color_normal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/f_line1"
        android:layout_below="@+id/line2"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#444">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line4"
        android:layout_below="@+id/f_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--宠物日历-->
        <RelativeLayout
            android:id="@+id/setting_day"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/setting_line_day"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/setting_lineday_normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="@color/tabhost_item_color_normal"
                android:layout_toRightOf="@+id/setting_line_day"
                android:text="宠物日历" />
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/jiantou_right"
                android:layout_alignParentRight="true"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/f_line2"
        android:layout_below="@+id/line4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#444"></LinearLayout>
    <LinearLayout
        android:id="@+id/line5"
        android:layout_below="@id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--小技巧-->
        <RelativeLayout
            android:id="@+id/jiqiao"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/jiqiao_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/jiqiao" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="@color/tabhost_item_color_normal"
                android:layout_toRightOf="@+id/jiqiao_img"
                android:text="小技巧" />
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/jiantou_right"
                android:layout_alignParentRight="true"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/f_line3"
        android:layout_below="@+id/line5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#444">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line6"
        android:layout_below="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--关于软件-->
        <RelativeLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/about_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/guanyu" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="@color/tabhost_item_color_normal"
                android:layout_toRightOf="@+id/about_img"
                android:text="关于软件" />
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/jiantou_right"
                android:layout_alignParentRight="true"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/f_line6"
        android:layout_below="@+id/line6"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#444">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/exit_login"
        android:text="退出登录"
        android:textColor="#fff"
        android:layout_marginBottom="5dp"
        android:background="@color/tabhost_item_color_checked"
        android:visibility="invisible"
        android:layout_width="180dp"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line7"
        android:orientation="vertical"
        android:layout_below="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--吐槽-->
        <RelativeLayout
            android:id="@+id/tucao"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/tucao_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/tucao" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="@color/tabhost_item_color_normal"
                android:layout_toRightOf="@+id/tucao_img"
                android:text="吐槽一下" />
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/jiantou_right"
                android:layout_alignParentRight="true"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/f_line7"
            android:layout_below="@+id/line7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#444"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/f_line8"
        android:layout_below="@+id/line8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#444">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line8"
        android:layout_below="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--免责声明及版权投诉-->
        <RelativeLayout
            android:id="@+id/mianze"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/mianze_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/mianze" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="@color/tabhost_item_color_normal"
                android:layout_toRightOf="@+id/mianze_img"
                android:text="免责声明" />
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/jiantou_right"
                android:layout_alignParentRight="true"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/f_line9"
        android:layout_below="@+id/line8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#444">
    </LinearLayout>

</RelativeLayout>
